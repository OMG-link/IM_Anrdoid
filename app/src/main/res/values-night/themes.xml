<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IM" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.IM.ConnectActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorLoginTitle">@color/white</item>
        <item name="colorLoginSubTitle">@color/gray</item>
        <item name="colorLoginHint">@color/light_gray_3</item>
        <item name="colorLoginInputAreaText">@color/white</item>
        <item name="colorLoginVersionInfo">@color/gray</item>
    </style>

    <style name="Theme.IM.RoomActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/qq_pressed</item>
        <!-- Customize your theme here. -->
        <item name="colorRoomChatInfo">@color/dark_green</item>
        <item name="colorRoomMainText">@color/light_gray_1</item>
        <item name="colorRoomSubText">@color/gray</item>
        <item name="colorRoomInputBlockBgr">@color/dark_gray_2</item>
        <item name="colorRoomInputAreaBgr">@color/black</item>
        <item name="colorRoomInputAreaText">@color/white</item>
        <item name="colorRoomBgr">@color/dark_gray_4</item>
        <item name="colorRoomSystemInfoBgr">@color/dark_gray_2</item>
        <item name="colorRoomChatTime">@color/dark_gray_1</item>
        <item name="colorRoomMessageBgr">@color/black</item>
        <item name="colorRoomMessageBgrPressed">@color/dark_gray_3</item>
        <item name="colorRoomPopupBgr">@color/light_gray_1</item>
        <item name="colorRoomPopupBgrPressed">@color/light_gray_2</item>
        <item name="colorRoomPopupText">@color/dark_gray_3</item>

    </style>

    <style name="Theme.IM.FileManagerActivity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorFileManagerFileName">@color/light_gray_1</item>
        <item name="colorFileManagerFileSize">@color/gray</item>
        <item name="colorFileManagerFileBgr">@color/dark_gray_1</item>
    </style>

    <style name="Theme.IM.ImageViewActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">

    </style>

</resources>