<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvPopupChatImageBtnOpen"
        style="@style/Theme.IM.PopupGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/popup_chat_image_open" />

    <TextView
        android:id="@+id/tvPopupChatImageBtnSave"
        style="@style/Theme.IM.PopupGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/popup_chat_image_favorite" />

</LinearLayout>