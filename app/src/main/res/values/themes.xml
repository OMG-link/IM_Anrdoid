<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IM" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- These colors are set for design view. -->
        <item name="colorLoginTitle">@color/black</item>
        <item name="colorLoginSubTitle">@color/gray</item>
        <item name="colorLoginHint">@color/dark_gray_3</item>
        <item name="colorLoginInputAreaText">@color/black</item>
        <item name="colorLoginVersionInfo">@color/gray</item>

        <item name="colorRoomChatInfo">@color/gray</item>
        <item name="colorRoomMainText">@color/black</item>
        <item name="colorRoomSubText">@color/gray</item>
        <item name="colorRoomInputBlockBgr">@color/light_gray_1</item>
        <item name="colorRoomInputAreaBgr">@color/white</item>
        <item name="colorRoomInputAreaText">@color/black</item>
        <item name="colorRoomBgr">@color/light_gray_4</item>
        <item name="colorRoomSystemInfoBgr">@color/light_gray_2</item>
        <item name="colorRoomChatTime">@color/gray</item>
        <item name="colorRoomMessageBgr">@color/white</item>
        <item name="colorRoomMessageBgrPressed">@color/light_gray_3</item>
        <item name="colorRoomPopupBgr">@color/dark_gray_1</item>
        <item name="colorRoomPopupBgrPressed">@color/dark_gray_2</item>
        <item name="colorRoomPopupText">@color/light_gray_3</item>

        <item name="colorFileManagerFileName">@color/black</item>
        <item name="colorFileManagerFileSize">@color/gray</item>
        <item name="colorFileManagerFileBgr">@color/light_gray_3</item>

    </style>

    <style name="Theme.IM.ConnectActivity" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="colorLoginTitle">@color/black</item>
        <item name="colorLoginSubTitle">@color/gray</item>
        <item name="colorLoginHint">@color/dark_gray_3</item>
        <item name="colorLoginInputAreaText">@color/black</item>
        <item name="colorLoginVersionInfo">@color/gray</item>
    </style>

    <style name="Theme.IM.RoomActivity" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/qq_pressed</item>
        <!-- Customize your theme here. -->
        <item name="colorRoomChatInfo">@color/gray</item>
        <item name="colorRoomMainText">@color/black</item>
        <item name="colorRoomSubText">@color/gray</item>
        <item name="colorRoomInputBlockBgr">@color/light_gray_1</item>
        <item name="colorRoomInputAreaBgr">@color/white</item>
        <item name="colorRoomInputAreaText">@color/black</item>
        <item name="colorRoomBgr">@color/light_gray_4</item>
        <item name="colorRoomSystemInfoBgr">@color/light_gray_2</item>
        <item name="colorRoomChatTime">@color/gray</item>
        <item name="colorRoomMessageBgr">@color/white</item>
        <item name="colorRoomMessageBgrPressed">@color/light_gray_3</item>
        <item name="colorRoomPopupBgr">@color/dark_gray_1</item>
        <item name="colorRoomPopupBgrPressed">@color/dark_gray_2</item>
        <item name="colorRoomPopupText">@color/light_gray_3</item>
    </style>

    <style name="Theme.IM.FileManagerActivity" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorFileManagerFileName">@color/black</item>
        <item name="colorFileManagerFileSize">@color/gray</item>
        <item name="colorFileManagerFileBgr">@color/light_gray_3</item>
    </style>

    <style name="Theme.IM.ImageViewActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

</resources>