<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.IM.QQButton">
        <item name="android:background">@drawable/send_text_button</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">16sp</item>
        <item name="android:paddingRight">16sp</item>
        <item name="android:paddingTop">8sp</item>
        <item name="android:paddingBottom">8sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>
    <style name="Theme.IM.Button">
        <item name="android:background">?attr/colorPrimary</item>
    </style>
    <style name="Theme.IM.PopupGrid">
        <item name="android:padding">12sp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorRoomPopupText</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:minWidth">60sp</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="Theme.IM.RoomTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginHorizontal">4sp</item>
    </style>
    <style name="Theme.IM.RoomMainText">
        <item name="android:textColor">?attr/colorRoomMainText</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Theme.IM.RoomSubText">
        <item name="android:textColor">?attr/colorRoomSubText</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Theme.IM.MessageBubble">
        <item name="android:clickable">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constrainedWidth">true</item>
        <item name="layout_constraintWidth_max">wrap</item>
        <item name="layout_constraintWidth_percent">1.0</item>
    </style>
</resources>